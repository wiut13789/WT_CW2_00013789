html
  head
    title Spendings App
    link(rel="stylesheet", href="/styles/style.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,700;1,400;1,700&family=Oswald:wght@400;500&family=Roboto:wght@100;300;400;700&display=swap", rel="stylesheet")
  body
    header
      h1 Spendings App
      nav
        ul
          li
            a.active(href="#") Home
          li
            a(href="#") Transactions
          li
            a(href="#") Categories
    main
      h2 Add Transaction
      form(action="/transactions", method="POST")
        label(for="date") Date:
        input(type="date", name="date", required)
        label(for="description") Description:
        input(type="text", name="description", required)
        label(for="category") Category:
        select(name="category", required)
          option(value="groceries") Groceries
          option(value="entertainment") Entertainment
          option(value="transportation") Transportation
          option(value="housing") Housing
          option(value="utilities") Utilities
        label(for="amount") Amount:
        input(type="number", name="amount", step="0.01", min="0", required)
        button(type="submit") Add Transaction
    footer
